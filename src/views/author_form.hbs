 <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2">
                 {{Sidebar}}
                <ul class="sidebar-nav">
                    <li><a href="/catalog">Home</a></li>
                    <li><a href="/catalog/books">All Books</a></li>
                    <li><a href="/catalog/authors">All Authors</a></li>
                    <li><a href="/catalog/genres">All genres</a></li>
                    <li><a href="/catalog/bookinstances">All book-instances</a></li>
                    <li><hr></li>
                    <li><a href="/catalog/author/create">Create new author</a></li>
                    <li><a href="/catalog/genre/create">Create new genre</a></li>
                    <li><a href="/catalog/book/create">Create new book</a></li>
                    <li><a href="/catalog/bookinstance/create">Create new book instance</a></li>
                </ul>
            </div>
             <div class="col-sm-10">
                <h1> {{title}}</h1>
                <form method="POST" action="">
                    <div class="form-group">
                        <label for="first_name">First Name :</label>
                        <input type="text" class="form-control" name="first_name" id="first_name" placeholder="First Name" required="true"
                        {{#if (ifEquality undefined author)}}value={{author.first_name}} {{else}} value="" {{/if}}>
                        <label for="last_name">Last Name :</label>
                        <input type="text" class="form-control" name="last_name" id="last_name" placeholder="Last Name" required="true"
                        {{#if (ifEquality undefined author)}}value={{author.last_name}} {{else}} value="" {{/if}}>
                        <label for="date_of_birth"> Date of birth:</label>
                        <input type="date" class="form-control" name="date_of_birth" id="date_of_birth" placeholder="Date of Birth"
                        {{#if (ifEquality undefined author)}}value={{author.date_of_birth}} {{else}} value="" {{/if}}>
                        <label for="date_of_death">Date of death :</label>
                        <input type="date" class="form-control" name="date_of_death" id="date_of_death" placeholder="Date of death"
                        {{#if (ifEquality undefined author)}}value={{author.date_of_death}} {{else}} value="" {{/if}}>
                        <button class="btn btn-primary mt-3" type="submit">Submit</button>
                        {{#if errors}}
                            <ul class="mt-3">
                                {{#each errors}}
                                    <li>{{this.msg}}</li>
                                {{/each}}
                            </ul>
                        {{/if}}
                    </div>
                </form>
             </div>
        </div>
    </div>
