 <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2">
                 {{Sidebar}}
                <ul class="sidebar-nav">
                    <li><a href="/catalog">Home</a></li>
                    <li><a href="/catalog/books">All Books</a></li>
                    <li><a href="/catalog/authors">All Authors</a></li>
                    <li><a href="/catalog/genres">All genres</a></li>
                    <li><a href="/catalog/bookinstances">All book-instances</a></li>
                    <li><hr></li>
                    <li><a href="/catalog/author/create">Create new author</a></li>
                    <li><a href="/catalog/genre/create">Create new genre</a></li>
                    <li><a href="/catalog/book/create">Create new book</a></li>
                    <li><a href="/catalog/bookinstance/create">Create new book instance</a></li>
                </ul>
            </div>
             <div class="col-sm-10">
                <h1> {{title}}</h1>
                <form method="POST" action="">
                    <div class="form-group">
                        <label for="title">Title :</label>
                        <input type="text" class="form-control" name="title" id="title" placeholder="Name of book" required="true"
                        {{#if (ifNotEquality undefined book)}}value={{book.title}} {{else}} value="" {{/if}}>
                    </div>
                    <div class="form-group">
                        <label for="author">Author :</label>
                        <select type="select" class="form-control" name="author" id="author" placeholder="Select author" required="true">
                            {{#each authors}}
                            {{#if (ifNotEquality undefined book)}}
                                <option value="{{this.id}}" id="{{this.name}}" selected= {{#if (ifEquaity this.id book.author)}}
                                "selected" {{else}} false {{/if}}
                                ></option>
                            {{else}}
                            <option value="{{this.id}}">{{this.name}}</option>
                            {{/if}}
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="summary">Summary :</label>
                        <textarea name="summary" id="summary" type="textarea" placeholder="Summary" rows="3"
                        required='true' {{#if (ifNotEquality undefined book)}}value={{book.summary}} {{else}} value="" {{/if}}></textarea>
                        </textarea>
                    </div>
                    <div class="form-group">
                        <label for="isbn">ISBN :</label>
                        <input type="text" class="form-control" name="isbn" id="isbn" placeholder="ISBN13" required="true"
                        {{#if (ifNotEquality undefined book)}}value={{book.isbn}} {{else}} value="" {{/if}}>
                    </div>
                    <div class="form-group">
                        <label>Genre : </label>
                        <div>
                            {{#each genres}}
                            <div style="display=inline; padding-right=10px">
                                <input type="checkbox" id="checkbox-input" name="genre" id={{this.id}} value="{{this.id}}"
                                {{#if (ifNotEquality undefined this.checked)}} checked {{/if}}>
                                <label for="{{this.id}}">{{this.name}}</label>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                        <button class="btn btn-primary mt-3" type="submit">Submit</button>
                        {{#if errors}}
                            <ul class="mt-3">
                                {{#each errors}}
                                    <li>{{this.msg}}</li>
                                {{/each}}
                            </ul>
                        {{/if}}
                    </div>
                </form>
             </div>
        </div>
    </div>
